<%= form_with model: [@post, @comment], url: create_post_comment_path  do |form| %>
  <% if @comment.errors.any? %>
    <div>
      <% @comment.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>
  <div class="mb-4 flex flex-col">
    <%= form.text_field :text, placeholder: "Add new comment here", class: "text-[#11537d]" %>
  </div>
  <div class="mb-4 flex flex-col">
    <%= form.submit "Comment" %>
  </div>
<% end %>